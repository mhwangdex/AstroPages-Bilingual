---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/config";
import { getLangFromUrl } from "@/i18n/ui";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "zh" } }, // 建议加上 zh，确保双语路径都生成
  ];
}

const lang = getLangFromUrl(Astro.url);

// 仅保留标题，删除了其他所有具体内容
const content = {
  zh: {
    title: "关于",
  },
  en: {
    title: "About",
  },
};

const c = content[lang as keyof typeof content];
---

<Layout title={`${c.title} | ${SITE.title}`}>
  <Header lang={lang} />
  <Breadcrumb lang={lang} />
  <main id="main-content" class="app-layout">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{c.title}</h1>
      
      <!-- 你可以在这里添加你自己的内容 -->
      <p>内容正在准备中...</p>
      
    </section>
  </main>
  <Footer lang={lang} />
</Layout>
